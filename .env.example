# Navidrome OBS Overlay configuration (example)
#
# Copy this file to .env and fill in your values, OR run the setup wizard:
#   python navidrome_obs_overlay.py --setup
#   python navidrome_obs_overlay.py --gui

NAVIDROME_URL=http://localhost:4533
NAVIDROME_USER=your_username
NAVIDROME_PASSWORD=your_password
NAVIDROME_CLIENT_NAME=obs-overlay
NAVIDROME_API_VERSION=1.16.1
NAVIDROME_TIMEOUT=6

# Overlay server settings
OVERLAY_HOST=127.0.0.1
OVERLAY_PORT=8080
OVERLAY_REFRESH_SECONDS=1

# Allow the overlay to expand wider than the minimum width when the title/artist is long.
# Options: true | false
OVERLAY_EXPAND_WIDTH=false

# When nothing is playing, show a placeholder cover image.
# Options: dark | light | off
OVERLAY_NOTHING_PLAYING_PLACEHOLDER=dark

# Overlay theme (optional)
OVERLAY_THEME_FONT_FAMILY="Segoe UI", sans-serif
OVERLAY_THEME_TEXT_COLOR=#f4f4f5
OVERLAY_THEME_CARD_BG=#000000
OVERLAY_THEME_ACCENT_START=#60a5fa
OVERLAY_THEME_ACCENT_END=#34d399
OVERLAY_THEME_CARD_RADIUS_PX=14
OVERLAY_THEME_CARD_MIN_WIDTH_PX=320
OVERLAY_THEME_COVER_SIZE_PX=96
OVERLAY_THEME_TITLE_SIZE_PX=18
OVERLAY_THEME_ARTIST_SIZE_PX=14
